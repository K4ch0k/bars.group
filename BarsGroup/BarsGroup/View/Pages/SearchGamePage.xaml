<Page x:Class="BarsGroup.View.Pages.SearchGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarsGroup.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchGamePage" Background="#FF00362A" Loaded="Page_Loaded" Unloaded="Page_Unloaded" >

    <Grid>
        <Viewbox Stretch="Uniform" Margin="60">
            <StackPanel>
                <Label Content="Осуществляется поиск игры" Foreground="White"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="White" FontSize="18" x:Name="MainTimer"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
